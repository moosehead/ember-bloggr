source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'rails-api'
gem 'thin'
gem 'active_model_serializers', github: 'rails-api/active_model_serializers'

group :development, :test do
  gem 'debugger'
end

group :production do
  gem 'pg'
end

# Using Gem's to make life easier
group :assets do
  gem 'jquery-rails'
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'compass-rails'
  gem 'uglifier'
  gem 'bootstrap-sass'
  gem 'modernizr-rails'
  gem 'ember-rails'
  gem 'handlebars_assets'
  gem 'momentjs-rails'
  gem 'showdown-rails'
end

group :development do
  gem 'quiet_assets'
  gem 'sqlite3'
end
